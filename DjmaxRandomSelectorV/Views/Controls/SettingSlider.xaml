<UserControl x:Class="DjmaxRandomSelectorV.Views.Controls.SettingSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DjmaxRandomSelectorV.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500">
    <ItemsControl Style="{StaticResource StyleSettingBar}">
        <ItemsControl.Resources>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </ItemsControl.Resources>
        <Border Style="{StaticResource StyleClearBox}"
                Padding="{StaticResource PaddingSettingBarLabelArea}">
            <Grid>
                <TextBlock Text="{Binding Name}"/>
                <TextBlock Text="{Binding ValueText}"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Slider Grid.Column="1"
                    Value="{Binding Value}"
                    Minimum="{Binding MinValue}"
                    Maximum="{Binding MaxValue}"
                    TickFrequency="{Binding Tick}"
                    IsSnapToTickEnabled="True"
                    Style="{StaticResource StyleSettingSlider}"/>
        </Grid>
    </ItemsControl>
</UserControl>
