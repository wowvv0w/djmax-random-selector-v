<UserControl x:Class="DjmaxRandomSelectorV.Views.Controls.SettingSpinBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DjmaxRandomSelectorV.Views.Controls"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500">
    <ItemsControl Style="{StaticResource StyleSettingBar}">
        <ItemsControl.Resources>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </ItemsControl.Resources>
        <Border Style="{StaticResource StyleClearBox}"
                Padding="{StaticResource PaddingSettingBarLabelArea}">
            <TextBlock Text="{Binding Name}"/>
        </Border>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    cal:Message.Attach="PrevValue"
                    Style="{StaticResource StyleSettingSpinBoxLeftButton}"/>
            <TextBlock Grid.Column="1"
                       Text="{Binding ValueText}"
                       Foreground="{StaticResource ColorSelected}"
                       HorizontalAlignment="Center"/>
            <Button Grid.Column="2"
                    cal:Message.Attach="NextValue"
                    Style="{StaticResource StyleSettingSpinBoxRightButton}"/>
        </Grid>
    </ItemsControl>
</UserControl>
