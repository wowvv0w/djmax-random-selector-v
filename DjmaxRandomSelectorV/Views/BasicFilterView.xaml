                                <DataTrigger Binding="{Binding Name}" Value="MAPLESTORY">
                                    <Setter TargetName="Button" Property="Background" Value="{StaticResource BgMapleStory}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Name}" Value="FALCOM">
