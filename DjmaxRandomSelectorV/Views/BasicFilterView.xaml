                                <DataTrigger Binding="{Binding Name}" Value="MUSE DASH">
                                    <Setter TargetName="Button" Property="Background" Value="{StaticResource BgMuseDash}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Name}" Value="NEXON">
