                                <DataTrigger Binding="{Binding Name}" Value="GIRLS' FRONTLINE">
                                    <Setter TargetName="Button" Property="Background" Value="{StaticResource BgGirlsFrontline}"/>
                                    <Setter TargetName="Button" Property="FontSize" Value="10"/>
