<UserControl x:Class="DjmaxRandomSelectorV.Views.FilterOptionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DjmaxRandomSelectorV.Views"
             d:DataContext="{d:DesignInstance local:FilterOptionView,
                                              IsDesignTimeCreatable=False}"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Border Background="#DF221C15"
                BorderBrush="Gray"
                BorderThickness="0 0 2 0"
                Grid.RowSpan="3" Grid.ColumnSpan="3">
        </Border>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Grid}" BasedOn="{StaticResource SettingBar}">
                    <Setter Property="Margin" Value="0 5 0 0"/>
                </Style>
                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BoldGrayTextBlock}">
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="Margin" Value="10 0 0 0"/>
                </Style>
                <Style TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource SettingToggleButton}">
                    <Setter Property="Grid.Column" Value="1"/>
                </Style>
                <Style TargetType="{x:Type Slider}" BasedOn="{StaticResource SettingSlider}">
                    <Setter Property="Grid.Column" Value="1"/>
                    <Setter Property="Margin" Value="20 0"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="FILTER OPTION"
                       Style="{StaticResource SettingCategoryText}"/>
            <Grid Style="{x:Null}"
                  Background="#7F584E46"
                  Height="90">
                <ContentControl x:Name="FilterOptionIndicator"
                                Height="55"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="EXCLUDE RECENT MUSICS"/>
                <TextBlock Text="{Binding Value, ElementName=ExceptCountSlider}"
                           HorizontalAlignment="Right"
                           Margin="0 0 10 0">
                </TextBlock>
                <Slider x:Name="ExceptCountSlider"
                        Value="{Binding ViewModel.ExceptCount}"
                        Minimum="0"
                        Maximum="30"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="MODE"/>
                <Grid Grid.Column="1"
                      Style="{x:Null}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Button Command="{Binding ViewModel.SwitchModeCommand}"
                            Style="{StaticResource LeftArrowButton}"/>
                    <TextBlock Text="{Binding ViewModel.ModeText}"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Grid.Column="1"/>
                    <Button Command="{Binding ViewModel.SwitchModeCommand}"
                            Grid.Column="2"
                            Style="{StaticResource RightArrowButton}"/>
                </Grid>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="AIDER"/>
                <Grid Grid.Column="1"
                      Style="{x:Null}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Button Command="{Binding ViewModel.SwitchAiderCommand}"
                            CommandParameter="prev"
                            Style="{StaticResource LeftArrowButton}"/>
                    <TextBlock Text="{Binding ViewModel.AiderText}"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Grid.Column="1"/>
                    <Button Command="{Binding ViewModel.SwitchAiderCommand}"
                            CommandParameter="next"
                            Grid.Column="2"
                            Style="{StaticResource RightArrowButton}"/>
                </Grid>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="LEVEL"/>
                <Grid Grid.Column="1"
                      Style="{x:Null}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Button Command="{Binding ViewModel.SwitchLevelCommand}"
                            CommandParameter="prev"
                            Style="{StaticResource LeftArrowButton}"/>
                    <TextBlock Text="{Binding ViewModel.LevelText}"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Grid.Column="1"/>
                    <Button Command="{Binding ViewModel.SwitchLevelCommand}"
                            CommandParameter="next"
                            Grid.Column="2"
                            Style="{StaticResource RightArrowButton}"/>
                </Grid>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
